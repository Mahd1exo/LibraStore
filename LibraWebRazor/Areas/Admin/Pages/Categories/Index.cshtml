@page
@model IndexModel
<div class="card shadow border-1 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">

            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-page="/Categories/create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Cateogry
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped table-dark">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Order
                    </th>
                    <th>
                        Operation
                    </th>
                </tr>
            </thead>
            <tbody>
        @foreach(var obj in Model.CategoryList.OrderBy(x=>x.Name))
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-page="/Categories/edit" asp-route-categoryId="@obj.CategoryId" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                                </a>
                            <a asp-page="/Categories/delete" asp-route-categoryId="@obj.CategoryId" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                    </div>
                </td>
            </tr>
        }
            </tbody>
        </table>
    </div>
</div>